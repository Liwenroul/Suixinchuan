<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>商家管理</title>
    <link rel="stylesheet" href="../stylesheets/css.css">
</head>
<style>
    .botton table th, td {
        width: 20px;
        text-align: center;
    }
</style>
<body>
    <div id="login_form">
        <div class="title">
            <img src='../images/qi-4.png'/>	
            随心穿后台管理系统			
        </div>
        <div class="left">
            <div class="a">
                <h1 onclick="showSystem()">系统管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showUser()">用户管理</h1>
            </div>
            <div class="a">
                <h1  onclick="showShop()">商家管理</h1>
            </div>
            <div class="a" style="background: #1daea9;">
                <h1 onclick="showGoods()">商品管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showDongTai()">动态管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showRent()">租借管理</h1>
            </div>
        </div>
        <div class="main">
            <div class="top">
                <h1>商品管理</h1>
                <form class="myform" action="/this_goods" method="POST">
                    <input 
                    style='margin-left: 100px;margin-top: 30px;width:400px;height:25px' type='text' value='' placeholder="搜索"
                    class="search_Dongtai" id="search_Dongtai" autocomplete="off" name="search_Dongtai"
                    >
                    <button type='submit' class="search_Bt" id="search_Bt" > 查找</button>
                    <!-- <button>替换</button> -->
                </form>
                
            </div>
            <div class="botton">
                <table style="font-size: 6px;">
                    <tr>
                        <th style="width:6px;"> </th>
                        <th>商品ID</th>
                        <th>商家ID</th>
                        <th>优惠ID</th>
                        <th>图片</th>
                        <th>标题</th>
                        <th>押金</th>
                        <th>价钱</th>
                        <th>尺码</th>
                        <th>品牌</th>
                        <th>颜色</th>
                        <th>余量</th>
                        <th>操作</th>
                    </tr>
                    <%for(var i=0;i < goods.length;i++){%>
                        <tr>
                            <td ><label><input type="radio" name="0" ></label></td>
                            <td>
                                <%= goods[i]["merid"]%>
                            </td>
                            <td>
                                <%= goods[i]["shopid"]%>
                            </td>
                            <td>
                                <%= goods[i]["saleid"]%>
                            </td>
                            <td>
                                <%= goods[i]["mermig"]%>
                            </td>
                            <td>
                                <%= goods[i]["tit"]%>
                            </td>
                            <td>
                                <%= goods[i]["mermon"]%>
                            </td>
                            <td>
                                <%= goods[i]["price"]%>
                            </td>
                            <td><button><a href="/lists?merId=<%= goods[i]["merid"]%>">尺码表</a></button></td>
                            <td>
                                <%= goods[i]["shopbrand"]%>
                            </td>
                            <td>
                                <%= goods[i]["mercolor"]%>
                            </td>
                            <td>
                                <%= goods[i]["mernum"]%>
                            </td>
                            <!-- <td>
                                <%= goods[i][""]%>
                            </td> -->
                            <td>
                                <button><a href="/editG?merid=<%=goods[i]["merid"]%>">编辑</a></button>
                                <button><a href="/delg?merid=<%= goods[i]["merid"]%>">删除</a></button>
                            </td>
                        </tr>
                    <%}%>
                    
                </table>
                
            </div>
        </div>
    </div>
</body>
<script>
    function showSystem() {
        window.location = "http://localhost:3000/system";
    }
    function showUser() {
        window.location = "http://localhost:3000/userguanli";
    }
    function showShop() {
        window.location = "http://localhost:3000/shop";
    }
    function showGoods() {
        window.location = "http://localhost:3000/goods";
    }
    function showDongTai() {
        window.location = "http://localhost:3000/dongtai";
    }
    function showRent() {
        window.location = "http://localhost:3000/rent";
    }
    function showZhuce() {
        window.location = "http://localhost:3000/zhuce";
    }
</script>
</html>
