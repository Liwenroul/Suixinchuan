<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>编辑界面</title>
    <link rel="stylesheet" href="../stylesheets/css.css">
    <style>
        /* 注册界面 */
        .zhuce{
            height: 450px;
            width: 800px;
            border:1px solid rgb(185, 183, 183);
            float: left;
            margin-left: 60px;
        }
        .divv{
            height: 50px;
            width: 500px;
            margin-top: 14px;
            margin-left: 150px;
            float: left;
        }
        .zhuce h3{
            float: left;
        }
        .zhuce input{
            float: left;
            width: 300px;
            height: 30px;
            margin-top: 10px;
            margin-left: 20px;
        }
        .zhuce button{
            width:200px;
            height:40px;
            float: right;
            background-color:#1daea9;
            border:0;
            border-radius: 8px;
            color:white;
            font-size:20px;
            font-weight: bolder;
            margin-right: 30px;
            margin-top: 10px;
        }

        
    </style>
</head>
<body>
    <div id="login_form">
        <div class="title">
            <img src='../images/qi-4.png'/>	
            随心穿后台管理系统			
        </div>
        <div class="left">
            <div class="a">
                <h1 onclick="showSystem()">系统管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showUser()">用户管理</h1>
            </div>
            <div class="a">
                <h1  onclick="showShop()">商家管理</h1>
            </div>
            <div class="a"  style="background: #1daea9;">
                <h1 onclick="showGoods()">商品管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showDongTai()">动态管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showRent()">租借管理</h1>
            </div>
        </div>
        
        <form class="zhuce" action="/editGoods?merid=<%=editGList[0].merid%>" method="POST">
            <div class="divv">
                <h3>商家ID:</h3>
                <input type="text" name="shopid" value=<%=editGList[0].shopid%>>
            </div>
            <div class="divv">
                <h3>优惠ID:</h3>
                <input type="text" name="saleid" value=<%=editGList[0].saleid%>>
            </div>
            <div class="divv">
                <h3>标题:</h3>
                <input type="text" name="tit" value=<%=editGList[0].tit%>>
            </div>
            <div class="divv">
                <h3>押金:</h3>
                <input type="text" name="mermon" value=<%=editGList[0].mermon%>>
            </div>
            <div class="divv">
                <h3>价钱:</h3>
                <input type="text" name="price" value=<%=editGList[0].price%>>
            </div>
            <div class="divv">
                <h3>品牌:</h3>
                <input type="text" name="shopbrand" value=<%=editGList[0].shopbrand%>>
            </div>
            <div class="divv">
                <h3>颜色:</h3>
                <input type="text" name="mercolor" value=<%=editGList[0].mercolor%>>
            </div>
            <div class="divv">
                <h3>余量:</h3>
                <input type="text" name="mernum" value=<%=editGList[0].mernum%>>
            </div>
            <div><button>确认</button></div>
            
        </form>

    </div>
</body>
<script>
    function showSystem() {
        window.location = "http://localhost:3000/system";
    }
    function showUser() {
        window.location = "http://localhost:3000/userguanli";
    }
    function showShop() {
        window.location = "http://localhost:3000/shop";
    }
    function showGoods() {
        window.location = "http://localhost:3000/goods";
    }
    function showDongTai() {
        window.location = "http://localhost:3000/dongtai";
    }
    function showRent() {
        window.location = "http://localhost:3000/rent";
    }
    function showZhuce() {
        window.location = "http://localhost:3000/zhuce";
    }
</script>
</html>
